{
	"manifest_version": 3,

	"name": "__MSG_appName__",
	"short_name": "DLRouter",
	"description": "__MSG_appDesc__",
	"default_locale": "en",

	"version": "0.9.0",
	"options_ui": {
		"page": "options.html"
	},
	"homepage_url": "https://github.com/lfk/downloads-router-chrome-extension",

	"permissions": [
		"downloads",
		"storage"
	],

	"background": {
		"service_worker": "manager.js"
	},

	"icons": {
		"16":  "data/icon16.png",
		"32":  "data/icon32.png",
		"48":  "data/icon48.png",
		"128": "data/icon128.png"
	}
}
